{
  "name": "FH_PRS_v1.0",
  "title": "FH PRS v1.0",
  "summary": "v1.0 - FH polygenic risk score calculation.",
  "properties": {
    "github release": "v1.0"
  },
  "dxapi": "1.0.0",
  "inputSpec": [
    {
      "name": "VCF",
      "label": "VCF",
      "help": "The VCF file",
      "class": "file",
      "patterns": ["*.vcf.gz*"],
      "optional": false
    },
    {
      "name": "BEDfile",
      "label": "BEDfile",
      "help": "BEDfile for FH regions",
      "class": "file",
      "patterns": ["*.bed*"],
      "optional": false
    },
    {
      "name": "fasta_file",
      "label": "fasta_file",
      "help": "Reference genome",
      "class": "file",
      "patterns": ["*.tar"],
      "optional": false
    },
    {
      "name": "skip",
      "label": "skip",
      "help": "Skip this step if not required",
      "class": "boolean",
      "optional": false,
      "default": true
    }
  ],
  "outputSpec": [
    {
      "name": "PRS_output",
      "label": "PRS output",
      "help": "Output file.",
      "class": "array:file",
      "optional": true
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "distribution": "Ubuntu",
    "release": "16.04",
    "version": "0",
    "file": "src/code.sh"
  },
  "access": {
    "network": [
      "*"
    ],
    "project": "CONTRIBUTE",
    "allProjects": "VIEW"
  },
  "ignoreReuse": false,
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "main": {
          "instanceType": "mem1_ssd1_x2"
        }
      }
    }
  }
}
